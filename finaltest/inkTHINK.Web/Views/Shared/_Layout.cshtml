<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - inkTHINK</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome para iconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <!-- CSS propio -->
    <link rel="stylesheet" href="~/css/site.css" />
    
    <style>
        /* Navbar links - color y negrita */
        .navbar .nav-link {
            color: #ffffff;       
            transition: color 0.3s ease;  
        }

        /* Efecto hover */
        .navbar .nav-link:hover {
            color: #ffd700;       
            text-decoration: underline;
        }

        /* Marca de la web */
        .navbar-brand {
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .navbar-brand:hover {
            color: #ffd700;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- Navbar moderno -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">inkTHINK</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Contribuyentes">Contribuyentes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/TaxRules">Reglas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Calculos">Cálculos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer simple -->
    <footer class="bg-light text-center text-muted py-3 mt-4 border-top">
        &copy; @DateTime.Now.Year inkTHINK - Todos los derechos reservados
    </footer>

    <!-- Scripts Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
