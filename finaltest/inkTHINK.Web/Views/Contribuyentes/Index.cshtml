@model IEnumerable<inkTHINK.Domain.Entities.Contribuyente>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Contribuyentes</h2>
    <a class="btn btn-primary" href="/Contribuyentes/Create"><i class="fas fa-plus"></i> Nuevo Contribuyente</a>
</div>

<table class="table table-hover table-striped align-middle">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Cedula / RNC</th>
            <th>Direcci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Nombre</td>
                <td>@c.RncCedula</td>
                <td>@c.Direccion</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Contribuyentes/Edit/@c.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-sm btn-danger" href="/Contribuyentes/Delete/@c.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
