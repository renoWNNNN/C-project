@model inkTHINK.Domain.Entities.Contribuyente

@{
    ViewData["Title"] = "Eliminar Contribuyente";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Seguro que deseas eliminar este contribuyente?</h3>

<div>
    <h4>@Model.Nombre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">RNC / Cédula</dt>
        <dd class="col-sm-10">@Model.RncCedula</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑 Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Cancelar</a>
</form>
