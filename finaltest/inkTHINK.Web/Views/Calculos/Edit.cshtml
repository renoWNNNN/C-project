@model inkTHINK.Domain.Entities.Calculo

@{
    ViewData["Title"] = "Editar Cálculo";
}

<h2>Editar Cálculo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label>Contribuyente</label>
        <select name="contribuyenteId" class="form-select" required>
            <option value="">-- Seleccione un contribuyente --</option>
            @if (ViewBag.Contribuyentes != null)
            {
                foreach (var c in ViewBag.Contribuyentes)
                {
                    if (c.Id == Model.ContribuyenteId)
                    {
                        <option value="@c.Id" selected>@c.Nombre</option>
                    }
                    else
                    {
                        <option value="@c.Id">@c.Nombre</option>
                    }
                }
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Monto</label>
        <input type="number" step="0.01" name="monto" class="form-control" value="@Model.Monto" required />
    </div>

    <div class="mb-3">
        <label>Reglas de impuestos aplicables</label>
        <div>
            @if (ViewBag.TaxRules != null)
            {
                var reglasSeleccionadas = new HashSet<int>();
                if (!string.IsNullOrWhiteSpace(Model.DetalleImpuestosJson))
                {
                    var detalle = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, decimal>>(Model.DetalleImpuestosJson)
                                 ?? new Dictionary<string, decimal>();

                    foreach (var rule in ViewBag.TaxRules)
                    {
                        if (detalle.ContainsKey(rule.Nombre))
                        {
                            reglasSeleccionadas.Add(rule.Id);
                        }
                    }
                }

                foreach (var rule in ViewBag.TaxRules)
                {
                    bool isChecked = reglasSeleccionadas.Contains(rule.Id);
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="reglasSeleccionadas" value="@rule.Id" @(isChecked ? "checked" : "") />
                        <label class="form-check-label" for="rule_@rule.Id">@rule.Nombre (@rule.Porcentaje %)</label>
                    </div>
                }
            }
        </div>
    </div>

    <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
