@model IEnumerable<inkTHINK.Domain.Entities.TaxRule>

<h1>Reglas de Impuestos</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tipo</th>
            <th>Versi√≥n</th>
            <th>Vigente Desde</th>
            <th>Vigente Hasta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rule in Model)
        {
            <tr>
                <td>@rule.Id</td>
                <td>@rule.Tipo</td>
