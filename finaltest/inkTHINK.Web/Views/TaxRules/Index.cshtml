@model IEnumerable<inkTHINK.Domain.Entities.TaxRule>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Reglas de Impuestos</h2>
    <a class="btn btn-success" href="/TaxRules/Create"><i class="fas fa-plus"></i> Nueva Regla</a>
</div>

<table class="table table-hover table-striped align-middle">
    <thead class="table-info">
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Versi√≥n</th>
            <th>Porcentaje</th>
            <th>Vigente Desde</th>
            <th>Vigente Hasta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Nombre</td>
                <td>@r.Tipo</td>
                <td>@r.Version</td>
                <td>@r.Porcentaje %</td>
                <td>@r.VigenteDesde.ToString("dd/MM/yyyy")</td>
                <td>@(r.VigenteHasta?.ToString("dd/MM/yyyy") ?? "Indefinido")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/TaxRules/Edit/@r.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-sm btn-danger" href="/TaxRules/Delete/@r.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No hay reglas de impuestos definidas. <a href="/TaxRules/Create" class="alert-link">Crea una nueva regla</a>.
    </div>
}