@model List<SPAKLY.Modelos.Clientes>

@{
    ViewData["Title"] = "Clientes";
}

<h2 class="mb-4">Clientes registrados</h2>

<a class="btn btn-success mb-3" asp-action="Crear">+ Nuevo Cliente</a>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Correo</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@cliente.ClienteID">Editar</a>
                    <form asp-action="Eliminar" asp-route-id="@cliente.ClienteID" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este cliente?');">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
