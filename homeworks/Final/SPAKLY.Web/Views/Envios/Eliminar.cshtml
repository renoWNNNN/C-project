@model SPAKLY.Modelos.Envio

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<div class="container mt-4">
    <h2>¿Estás seguro de eliminar este envío?</h2>

    <div class="card">
        <div class="card-body">
            <p><strong>ID:</strong> @Model.EnvioId</p>
            <p><strong>Dirección:</strong> @Model.Direccion</p>
            <p><strong>Estado:</strong> @Model.Estado</p>
            <p><strong>Fecha de Envío:</strong> @Model.FechaEnvio</p>

            <form asp-action="Eliminar" asp-route-id="@Model.EnvioId" method="post">
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
