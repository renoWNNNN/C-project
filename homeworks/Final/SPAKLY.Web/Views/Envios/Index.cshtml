@model IEnumerable<SPAKLY.Modelos.Envio>

@{
    ViewData["Title"] = "Lista de Envíos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de Envíos</h2>
        <a class="btn btn-success" asp-action="Crear">+ Nuevo Envío</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Dirección</th>
                <th>Estado</th>
                <th>Fecha de Envío</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var envio in Model)
            {
                <tr>
                    <td>@envio.EnvioId</td>
                    <td>@envio.Direccion</td>
                    <td>@envio.Estado</td>
                    <td>@envio.FechaEnvio</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@envio.EnvioId">Editar</a>

                        <form asp-action="Eliminar" asp-route-id="@envio.EnvioId" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este envío?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
