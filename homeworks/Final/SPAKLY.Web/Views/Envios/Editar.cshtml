@model SPAKLY.Modelos.Envio

@{
    ViewData["Title"] = "Editar Envío";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Envío</h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="EnvioId" />

        <div class="mb-3">
            <label asp-for="Direccion" class="form-label">Dirección</label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Estado" class="form-label">Estado</label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaEnvio" class="form-label">Fecha de Envío</label>
            <input asp-for="FechaEnvio" class="form-control" type="date" />
            <span asp-validation-for="FechaEnvio" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a href="/Envios/Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
