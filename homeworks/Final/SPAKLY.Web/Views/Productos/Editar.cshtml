@model SPAKLY.Modelos.Productos

@{
    ViewData["Title"] = "Editar Producto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" id="Nombre" name="Nombre" class="form-control" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripci√≥n</label>
        <input type="text" id="Descripcion" name="Descripcion" class="form-control" value="@Model.Descripcion" required />
    </div>
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" id="Precio" name="Precio" class="form-control" value="@Model.Precio" step="0.01" required />
    </div>
    <div class="form-group">
        <label for="Stock">Stock</label>
        <input type="number" id="Stock" name="Stock" class="form-control" value="@Model.Stock" required />
    </div>
    <input type="hidden" name="ProductosId" value="@Model.ProductosId" />
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>

<a href="@Url.Action("Productos", "Home")" class="btn btn-secondary">Volver a la lista de productos</a>

