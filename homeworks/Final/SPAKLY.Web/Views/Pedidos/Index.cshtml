@model IEnumerable<SPAKLY.Modelos.Ordenes>

@{
    ViewData["Title"] = "Listado de Pedidos";
}

<h2>Pedidos</h2>

<a asp-action="Crear" class="btn btn-success mb-3">Crear Nuevo Pedido</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var pedido in Model)
    {
        <tr>
            <td>@pedido.IdPedido</td>
            <td>@pedido.Fecha.ToShortDateString()</td>
            <td>$@pedido.Total.ToString("F2")</td>
            <td>@pedido.ClienteId</td>
            <td>
                <a asp-action="Editar" asp-route-id="@pedido.IdPedido" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Eliminar" asp-route-id="@pedido.IdPedido" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
