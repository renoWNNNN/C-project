@model SPAKLY.Modelos.Ordenes

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<h2>Eliminar Pedido</h2>

<div class="alert alert-danger">
    <strong>¿Estás seguro de que deseas eliminar este pedido?</strong>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.IdPedido</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">$@Model.Total.ToString("F2")</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.ClienteId</dd>
    </dl>
</div>

<form asp-action="Eliminar">
    <input type="hidden" asp-for="IdPedido" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
