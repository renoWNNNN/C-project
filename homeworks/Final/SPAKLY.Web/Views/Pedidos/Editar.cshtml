@model SPAKLY.Modelos.Ordenes

@{
    ViewData["Title"] = "Editar Pedido";
}

<h2>Editar Pedido</h2>

<form asp-action="Editar">
    <input type="hidden" asp-for="IdPedido" />
    
    <div class="form-group">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
    </div>
    
    <div class="form-group">
        <label asp-for="Total" class="control-label"></label>
        <input asp-for="Total" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ClienteId" class="control-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes">
            <option value="">Seleccione un cliente</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
